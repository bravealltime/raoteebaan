rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /proofs/{roomId}/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && (get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'owner' || get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    match /parcels/{parcelId}/{fileName} {
      allow write: if request.auth != null;
      allow read: if request.auth != null && (get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'owner' || get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    // Allow authenticated users to read their own avatars
    match /avatars/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Deny all other reads and writes by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}